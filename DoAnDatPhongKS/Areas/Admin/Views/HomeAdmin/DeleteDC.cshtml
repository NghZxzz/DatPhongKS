@model DoAnDatPhongKS.Models.DiscountCode
@{
    ViewData["Title"] = "Delete Discount Code";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Delete Discount Code</h1>

<h3>Are you sure you want to delete this code?</h3>
<div>
    <h4>@Model.Code</h4>
    <p>Discount: @Model.DiscountPercentage %</p>
    <p>Expires: @Model.ExpiryDate.ToShortDateString()</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="QuanLyDC" class="btn btn-secondary">Cancel</a>
</form>
