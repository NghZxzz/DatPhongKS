
@* @model IEnumerable<DoAnDatPhongKS.Models.Product> *@
@model DoAnDatPhongKS.Models.CategoryProductViewModel

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layoutcustomer.cshtml";
	int numOfQuantity = 1;
}



<section class="ftco-menu mb-5 pb-5">
	<div class="container">
		<div class="row d-md-flex">
			<div class="col-lg-12 ftco-animate p-md-5">
				<div class="row">
					<div class="col-md-12 nav-link-wrap mb-5">
						<div class="nav ftco-animate nav-pills justify-content-center" id="v-pills-tab" role="tablist" aria-orientation="vertical">
							@foreach (var category in Model.Categories)
							{
								<a class="nav-link @(category.Id == Model.SelectedCategoryId ? "active" : "")"
								   id="v-pills-@category.Id-tab"
								   asp-controller="Shop"
								   asp-action="Index"
								   asp-route-categoryId="@category.Id"
								   role="tab"
								   aria-controls="v-pills-@category.Id"
								   aria-selected="@(category.Id == Model.SelectedCategoryId ? "true" : "false")">@category.Name</a>
							}
						</div>
					</div>

					<div class="col-md-12 d-flex align-items-center">
						<div class="tab-content ftco-animate" id="v-pills-tabContent">
							@foreach (var category in Model.Categories)
							{
								<div class="tab-pane fade @(category.Id == Model.SelectedCategoryId ? "show active" : "")"
									 id="v-pills-@category.Id"
									 role="tabpanel"
									 aria-labelledby="v-pills-@category.Id-tab">
									<div class="row">
										@foreach (var item in Model.Products)
										{
											if (item.CategoryId == category.Id && item.Status == null)
											{
												<div class="col-md-4">
													<div class="menu-entry">
														<a asp-controller="Shop" asp-action="detail" asp-route-id="@item.Id" class="img" style="background-image: url(@item.ImageUrl);"></a>
														<div class="text text-center pt-4">
															<h3><a asp-controller="Shop" asp-action="detail" asp-route-id="@item.Id">@item.Name</a></h3>
															<p>@item.ShortDescription</p>
															<p class="price"><span>@item.Price vnđ</span></p>
															<p><a asp-controller="Shop" asp-action="detail" asp-route-id="@item.Id" class="btn btn-primary btn-outline-primary">Add to Cart</a></p>
														</div>
													</div>
												</div>
											}
										}
									</div>
								</div>
							}
						</div>
					</div>
					</div>
				</div>
			</div>
		</div>
</section>


