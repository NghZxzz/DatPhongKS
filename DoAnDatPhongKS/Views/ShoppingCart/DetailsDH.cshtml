@model IEnumerable<DoAnDatPhongKS.Models.OrderDetail>

@{
    ViewData["Title"] = "History";
    Layout = "~/Views/Shared/_Layoutcustomer.cshtml";
}
<br />
<br />
<br />
<br />
<br />
<div>
    <a class="col-xl-8" asp-action="History">Quay lại danh sách đơn hàng</a>
</div>
<div class="col-xl-8 mx-auto d-flex justify-content-center align-items-center ftco-animate" style="background-image:url(~/images/bg_3.jpg);">
    <table class="table text-center">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Product.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Product.ImageUrl)</th>
                <th>@Html.DisplayNameFor(model => model.Price)</th>
                <th>@Html.DisplayNameFor(model => model.Quantity)</th>
                <th>@Html.DisplayNameFor(model => model.CheckInDate)</th>
                <th>@Html.DisplayNameFor(model => model.CheckOutDate)</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Product.Name)</td>
                    <td><img src="@Html.DisplayFor(modelItem => item.Product.ImageUrl)" width="150" /></td>
                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                    <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                    <td>@Html.DisplayFor(modelItem => item.CheckInDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.CheckOutDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.Total)</td>
                </tr>
            }
        </tbody>
    </table>
</div>